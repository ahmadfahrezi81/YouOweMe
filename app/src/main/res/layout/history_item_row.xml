<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/TVHistoryItemRowDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History Description Placeholder"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/TVHistoryItemRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="November 19, 2022"
            />
        <TextView
            android:id="@+id/TVHistoryItemRowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:56 AM"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>